    <body>
        <%- include('../include/navbar.ejs') %>
        <main>
            <div class = 'container'>
                <h1 class = 'heading'>Thoughts</h1>
                <div class = 'container-1'>
                    Here are your Thoughts:
                    <form action = "" method = 'POST'>
                        <label for = 'task'>Thought:</label>
                        <input type = 'text' class = 'task' name = 'name'>
                        <button type = 'submit' id = 'add-task'>Add Thought</button>
                    </form>
                    <% if (thoughts != null) { %>
                    <% var keys= Object.keys(thoughts); for(var i=0;i<keys.length;i++) {%>
                        <h3><%= keys[i] %></h3> <a href="/thoughts/edit?id=<%= i %>"><button type="submit" id="delete-task">Edit</button></a>
                        <a href = "/thoughts?delete=<%= i %>"><button>Delete</button></a><br>
                    <% } %>
                    <% } else {%>
                        <div class = 'empty'>OOPS! It looks empty here</div>
                    <% } %>
                </div>
            </div>
        </main>
