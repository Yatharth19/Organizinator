    <body>
        <%- include('../include/navbar.ejs') %>
        <main>
            <div class = 'container'>
                <h1 class = 'heading'>Roadmap</h1>
                <div class = 'continer-1'>
                    This is your RoadMap:
                    <form action = "" method = 'POST'>
                        <label for = 'task'>RoadMap:</label>
                        <input type = 'text' class = 'task' name = 'name'>
                        <button type = 'submit' id = 'add-task'>Add</button>
                    </form>
                    <% if (roadmap != null && Object.keys(roadmap).length != 0) { %>
                    <% var keys= Object.keys(roadmap); for(var i=0;i<keys.length;i++) {%>
                        <%= keys[i] %> <a href="/roadmap/edit?id=<%= i %>"><button type="submit" id="delete-task">Edit</button></a>
                        <a href = "/roadmap?delete=<%= i %>"><button>Delete</button></a><br>
                    <% } %>
                    <% } else {%>
                        <div class = 'empty'>OOPS! It looks empty here</div>
                    <% } %>
                </div>
            </div>
        </main>
